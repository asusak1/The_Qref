<h3>New quiz</h3>
<hr>
<form action="{# quiz_save_url #}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Quiz name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Quiz Name">
    </div>
    <div class="form-group">
        <label for="description">Quiz description</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Quiz description">
    </div>
    <div class="form-group">
        <label for="quiz_file">Quiz file</label>
        <input type="file" class="form-control-file" name="quiz_file" id="quiz_file">
    </div>
    <div class="form-group">
        <label for="quiz_text">Quiz</label>
        <textarea class="form-control" id="quiz_text" name="quiz_text" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label for="time_limit">Time limit (minutes)</label>
        <input type="number" class="form-control" id="time_limit" name="time_limit">
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="comments_allowed" id="comments_allowed">
            <label class="form-check-label" for="comments_allowed">
                Allow comments
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="public" id="public">
            <label class="form-check-label" for="public">
                Public
            </label>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>
